    <section id="quiensomos" class={`section ${isFirstService && "bg-theme-light"}`}>
      <div class="container" style="margin-top: 10px;">
        <div class="items-center gap-8 md:grid md:grid-cols-2">
          {/* Primer servicio */}
          {isFirstService && (
            <div class={`service-carousel md:order-1`}>
              {service!.images!.length > 1 ? (
                <div class="swiper">
                  <div class="swiper-wrapper">
                        {[
                          '/images/diverFoto1.png',
                          '/images/diverFoto2.png',
                          '/images/diverFoto3.png',
                          '/images/diverFoto4.png'
                        ].map((image) => (
                          <div class="swiper-slide">
                        <Image
                          style="box-shadow: 0 6px 12px rgba(0, 0, 0, 0.92);"
                          class="mx-auto rounded-lg"
                          src={image}
                          width={420}
                          height={250}
                          alt="imagenes únicas"
                        />
                      </div>
                    ))}
                  </div>
                  <div class="pagination" />
                </div>
              ) : (
                <Image
                  style="box-shadow: 0 6px 12px rgba(0, 0, 0, 0.92);"
                  class="mx-auto rounded-lg"
                  src={service!.images![0]}
                  width={420}
                  height={250}
                  alt="imagenes únicas"
                />
              )}
            </div>
          )}

          {/* Contenido del primer servicio */}
