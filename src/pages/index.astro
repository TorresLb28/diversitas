<!--Aquí es el css para que haga el zoom las fotos del carrete --> 
<style>
  .swiper-slide {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .swiper-slide:hover {
    transform: scale(1.2); /* Aumenta el tamaño al 120% */
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.75); /* Aumenta la sombra */
  }

  /*Logo movimiento*/
  /* Estilo base para la imagen */
#pr-image {
  transition: transform 0.52s ease-in-out, opacity 0.52s ease-in-out;
}

/* Efecto de zoom */
.zoom-out-fade-effect {
    transform: scale(0.4); /* Reduce el tamaño a 80% */
    opacity: 0.01; /* Desvanece la imagen completamente */
}

</style>

  <script>
    import { Swiper } from "swiper";
    import "swiper/css";
    import "swiper/css/pagination";
    import { Autoplay, Pagination } from "swiper/modules";

    // astro:page-load event is fired when the page is loaded
    document.addEventListener("astro:page-load", () => {
      new Swiper(".service-carousel .swiper", {
        modules: [Pagination, Autoplay],
        autoplay: {
          delay: 3000,
        },
        pagination: {
          type: "bullets",
          el: ".service-carousel .pagination",
          clickable: true,
        },
      });
    });
    //Animacion Zoom
   // Detecta el evento de scroll
   window.addEventListener('scroll', function() {
          const logo = document.getElementById('pr-image');
          const scrollPosition = window.scrollY;

          // Verificar que el elemento existe antes de aplicar las clases
          if (logo) {
              if (scrollPosition > 50) {
                  logo.classList.add('zoom-out-fade-effect');
              } else {
                  logo.classList.remove('zoom-out-fade-effect');
              }
          }
      });


  </script> 
